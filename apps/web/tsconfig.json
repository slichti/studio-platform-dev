{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx",
        "functions/**/*.ts",
        "functions/**/*.js",
        "env.d.ts"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": [
            "react-router",
            "react-router-dom"
        ],
        "resolveJsonModule": true,
        "target": "ES2022",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "@api/*": [
                "../../packages/api/src/*"
            ],
            "@studio/emails": [
                "../../packages/emails/src/index.ts"
            ],
            "@studio/db": [
                "../../packages/db/src/index.ts"
            ],
            "@studio/db/*": [
                "../../packages/db/*"
            ]
        },
        "noEmit": true
    }
}