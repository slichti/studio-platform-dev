{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/.server/**/*.ts",
        "**/.server/**/*.tsx",
        "**/.client/**/*.ts",
        "**/.client/**/*.tsx",
        "functions-template/**/*.ts",
        "functions-template/**/*.d.ts",
        "env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "functions",
        "build",
        ".wrangler"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "target": "ES2022",
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "@api/*": [
                "../../packages/api/src/*"
            ],
            "@studio/emails": [
                "../../packages/emails/src/index.ts"
            ],
            "@studio/db": [
                "../../packages/db/src/index.ts"
            ],
            "@studio/db/*": [
                "../../packages/db/*"
            ]
        },
        "noEmit": true
    }
}