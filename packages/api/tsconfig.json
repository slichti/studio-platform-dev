{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "types": [
            "@cloudflare/workers-types"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@studio/db": [
                "../db/src/index.ts"
            ],
            "@studio/db/*": [
                "../db/*"
            ],
            "@studio/emails": [
                "../emails/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}